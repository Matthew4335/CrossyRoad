<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Screen2">

    <ImageView
        android:id="@+id/logoAnimation"
        android:layout_width="420dp"
        android:layout_height="810dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn"
        android:layout_marginStart="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="1sp"
        android:background="#30000000"
        android:hint="Name"
        android:padding="20sp"
        android:textColorHint="@color/white"></EditText>

    <TextView
        android:id="@+id/difficulty_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Select A Difficulty"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinny"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_below="@id/difficulty_display"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="114dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
        android:id="@+id/character_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinny"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Select A Character"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/spriteButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/character_select"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/char1"
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:background="@drawable/mainchar1"
            android:button="@null"
            android:gravity="center" />

        <RadioButton android:id="@+id/char2"
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:background="@drawable/mainchar2"
            android:button="@null"
            android:gravity="center" />

        <RadioButton android:id="@+id/char3"
            android:layout_width="81dp"
            android:layout_height="105dp"
            android:background="@drawable/mainchar3"
            android:button="@null"
            android:gravity="center" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spriteButtons"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Go" />

</RelativeLayout>